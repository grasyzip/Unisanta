//09)
    int maior = int.MinValue;
    int menor = int.MaxValue;
    for (int i = 0; i < 10; i++)
    {
        Console.Write($"Digite o {i + 1}º valor: ");
        int valor = int.Parse(Console.ReadLine());
        if (valor > maior)
        {
            maior = valor;
        }
        if (valor < menor)
        {
            menor = valor;
        }
    }
    Console.WriteLine($"Maior valor: {maior}");
    Console.WriteLine($"Menor valor: {menor}");

