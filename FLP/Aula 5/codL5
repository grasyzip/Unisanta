//01)
int valor;
do
{
  Console.Write("Digite um valor positivo: ");
  valor = int.Parse(Console.ReadLine());
  if (valor <= 0)
  {
      Console.WriteLine("Valor inválido. Digite novamente.");
  }
} while (valor <= 0);
  return valor;

//02)
int valor1 = LerValorPositivo();
int valor2;
do
{
  Console.Write($"Digite um valor maior que {valor1}: ");
  valor2 = int.Parse(Console.ReadLine());
  if (valor2 <= valor1)
  {
      Console.WriteLine($"Valor inválido. Digite um valor maior que {valor1}.");
  }
} while (valor2 <= valor1);
  Console.WriteLine($"Valores lidos: {valor1}, {valor2}");

